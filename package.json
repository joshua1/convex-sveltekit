{
  "name": "convex-sveltekit",
  "version": "0.1.5",
  "packageManager": "pnpm@10.24.0",
  "description": "SvelteKit-native Convex integration. Real-time queries, form spreading, SSR-to-live transport.",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "prepare": "husky",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "@sveltejs/kit": "^2.51.0",
    "convex": "^1.17.0",
    "svelte": "^5.29.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@sveltejs/adapter-vercel": "^6.3.1",
    "@sveltejs/kit": "^2.51.0",
    "@sveltejs/package": "^2.3.11",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "convex": "^1.31.7",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.50.3",
    "svelte-check": "^4.3.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vite": "^7.3.1",
    "zod": "^4.3.6"
  },
  "keywords": [
    "svelte",
    "sveltekit",
    "convex",
    "real-time",
    "ssr",
    "forms",
    "transport"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/axel-rock/convex-sveltekit"
  },
  "homepage": "https://github.com/axel-rock/convex-sveltekit#readme",
  "author": "Axel Rock",
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "printWidth": 100,
    "plugins": [
      "prettier-plugin-svelte"
    ],
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  }
}
